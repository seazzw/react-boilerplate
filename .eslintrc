{
    "parser": "babel-eslint",
    "extends": [
        "standard",
        "standard-react"
    ],
    "plugins": [
        "babel",
        "react",
        "promise"
    ],
    "globals": {
        "fetch": false,
        "__DEV__": false,
        "__TEST__": false,
        "__PROD__": false,
        "__COVERAGE__": false
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        // don't force es6 functions to include space before paren
        "space-before-function-paren": 0,
        // allow specifying true explicitly for boolean props
        "react/jsx-boolean-value": 0,
        "generator-star-spacing": "off"
    }
}